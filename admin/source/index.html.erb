<div class="login-container">
	<form id="login" name="login" novalidate ng-controller="loginController">
        <div class="form-group">
            <input type="text" id="user_name" class="form-control" placeholder="User name" ng-model="user_name"/>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="password"/>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" ng-click="authenticate()">Login</button>
        </div>
        <div class="form-group">
            <div ng-bind="errorMessage" class="text-danger" ng-show="errorMessage"></div>
        </div>
    </form>
</div>
<script language="javascript" src="js/login.js"></script>
<script language="javascript" type="text/javascript">	
	angular.bootstrap(document.getElementById("login"), ['login']);
</script>