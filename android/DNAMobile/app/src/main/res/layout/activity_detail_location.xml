<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/uiMainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/uiImageInfor"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/test_image"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uiLblTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="10th St. Lofts"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/uiLblAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="16sp"
                        android:text="1010 Saint Charles St, 63103"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/uiLblZipCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="16sp"
                        android:text="63103"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="Captains"
                android:layout_width="match_parent"
                android:id="@+id/uiBtnTitle"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="10dp"
                android:layout_height="44dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/uiPnlContact">

                <ImageView
                    android:id="@+id/uiImageIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_launcher"
                    android:scaleType="fitCenter"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uiLblNameContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Norbert Jackson"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/uiLblSelectedContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="16sp"
                        android:text="Select to contact"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="DataSource"
        android:layout_width="match_parent"
        android:id="@+id/uiBtnDataSource"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorWhite" />


</RelativeLayout>