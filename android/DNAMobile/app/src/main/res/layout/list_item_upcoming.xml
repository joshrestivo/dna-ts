<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uiImageInfor"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/test_image"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="80dp"
                android:layout_width="80dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uiLblTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Downtown Street Alert"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/uiLblDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textSize="16sp"
                    android:lines="3"
                    android:text="These events have been permitted to close the following streeet at the time below, relocationasdfasdf alsdfk alsdjkf alksdf alsdfasdf"
                    android:textColor="@android:color/black"
                    android:ellipsize="end"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@android:color/darker_gray" />

</LinearLayout>