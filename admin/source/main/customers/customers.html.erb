<div class="breakcrumb">
	<ol class="breadcrumb">
	  <li class="active">Customers</li>
	</ol>
</div>
<div class="client-resource" ng-cloak ng-controller="bulletinsController" ng-init="Init()">		
	<div class="row">		
		<div class="col-md-2">
			<a class="add-key-resource btn btn-primary" ng-click="addNewCustomer()">New Customer</a>
		</div>
	</div>
	<div class="customers-table">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>Phone</th>	
					<th>Address</th>
					<th>Email</th>
					<th>#</th>			
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="customer in customers.slice(((currentPage-1)*itemPerPage), ((currentPage)*itemPerPage))">
                    <td  ng-bind="customer.name"></td>
                    <td  ng-bind="customer.phone"></td>    
                    <td  ng-bind="customer.address"></td>    
                    <td  ng-bind="customer.email"></td>                    
                    <td width="70px;" align="center">
                    	<a href="#" class="td-edit" ng-click="editCustomer(customer)"><i class="fa fa-pencil-square-o"></i></a>   
                    	<a href="#" class="td-delete" ng-click="deleteCustomer(customer)"><i class="fa fa-times"></i></a>           
                	</td>                      
                </tr>
			</tbody>
		 </table>
		 <div class="paginations">
            <div class="col-md-9">
				<uib-pagination boundary-links="true" total-items="TotalItems"  max-size="maxSize" items-per-page="itemPerPage" ng-model="currentPage" class="pagination-sm" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></uib-pagination>
            </div>
            <div class="col-md-3 total">
                <span>Total:</span>
                <span ng-bind="TotalItems"></span>                
            </div>
        </div>      
	</div>
</div>
<script language="javascript" src="/js/admin/main/customers/customersController.js"></script>

	
